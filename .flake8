[flake8]
max-line-length = 88
extend-ignore =
    # Missing docstring in public module
    D100,
    # Missing docstring in public function (mainly for tests)
    D103,
    # Missing docstring in magic method
    D105,
    # Missing docstring in __init__
    D107,
    # First line imperative mood
    D401,
    # Function signature as first line
    D402,
    # Whitespace before ':' (conflicts with Black)
    E203
exclude = .git,__pycache__,build,dist
per-file-ignores =
    # Ignore missing docstrings in tests
    tests/*:D100,D103
    # Ignore missing docstrings in setup.py
    setup.py:D100
